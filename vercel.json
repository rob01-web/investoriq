{
  "version": 2,
  "functions": {
    "api/**/*.js": { "maxDuration": 60 }
  },
  "crons": [
    {
      "path": "/api/cron-worker",
      "schedule": "* * * * *"
    }
  ],
  "routes": [
    { "handle": "filesystem" },

    { "src": "^/api/(.*)$", "dest": "/api/$1" },

    { "src": "^/assets/(.*)$", "dest": "/assets/$1" },

    { "src": "^/(.*)$", "dest": "/index.html" }
  ]
}